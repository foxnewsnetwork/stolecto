{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "declaration": true,
        "rootDir": "packages",
        "baseUrl" : "./packages",
        "newLine": "LF",
        "noEmit": true
    },
    "filesGlob": [
      "packages/**/*.d.ts",
      "packages/**/*.ts"
    ],
    "exclude": [
        "dist",
        "demos",
        "tmp",
        "node_modules",
        "bower_components",
        ".vscode"
    ]
}
